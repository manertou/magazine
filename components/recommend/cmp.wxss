/* components/recommend/cmp.wxss */
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	background: #fff;
}
.big-title {
	position: relative;
	font-size: 52rpx;
	padding-bottom: 24rpx;
	letter-spacing: 10rpx;
}
.big-title::after {
	position: absolute;
	left: 50%;
	margin-left: -57rpx;
	bottom: 0;
	content: '';
	width: 114rpx;
	height: 4rpx;
	background-color: #999;
}
.title {
	width: 700rpx;
	font-size: 28rpx;
	margin-top: 24rpx;
	text-align: center;
}
.image,
.skeleton {
	margin-top: 50rpx;
	margin-bottom: 20rpx;
	width: 700rpx;
	height:	750rpx;
}
.skeleton {
	position: relative;
	background-color: rgba(0, 0, 0, .3);
}
.loader {
	position: absolute;
	width: 40rpx;
	height: 40rpx;
	top: 50%;
	left: 50%;
	margin-top: -20rpx;
	margin-left: -20rpx;
	border: 1rpx solid #888;
	border-bottom-color: transparent;
	border-radius: 50%;
	animation: 1s loader linear infinite;
}
@keyframes loader {
	0% {
		transform: rotate(0deg);
	}
	50% {
		transform: rotate(360deg);
	}
}